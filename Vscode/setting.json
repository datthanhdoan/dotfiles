{
  "window.title": "${rootName}",
  "workbench.layoutControl.type": "menu",
  "workbench.layoutControl.enabled": false, // hide status bar
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",

  "workbench.iconTheme": "vscode-icons",
  "editor.formatOnSave": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.runInTerminal": true,
  // "editor.fontFamily": "'Fira Ligatures NL Retina','IntoneMono Nerd Font Mono','JetBrainsMono Nerd Font','monospace'",
  "editor.fontFamily": "'Fira Ligatures NL Retina','JetBrainsMono Nerd Font','monospace'",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "settingsSync.ignoredSettings": ["editor.formatOnSave"],

  "editor.renderWhitespace": "boundary", // render whitespace only on the boundaries
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on", // smooth caret animation (default: "solid")
  "workbench.list.smoothScrolling": true, // smooth scroll for file explorer
  "editor.cursorSurroundingLines": 5, // number of lines to keep above and below the cursor
  "editor.cursorBlinking": "phase", // blinking cursor animation

  // APC
  "apc.listRow": {
    "lists": ["explorer-folders-view", "quick-input-list", "results"],
    "height": 20
  },
  "apc.activityBar": {
    "height": 20,
    "position": "bottom",
    "size": 40
  },
  "apc.header": {
    "height": 30
  },

  // TERM REGION ---------------------------------------------------------------
  "terminal.integrated.commandsToSkipShell": [
    // Ensure the toggle sidebar visibility keybinding skips the shell
    "workbench.action.toggleSidebarVisibility",
    // Send quick open's keybinding to the shell
    "workbench.view.explorer"
  ],

  // VIM REGION ----------------------------------------------------------------
  "vim.easymotion": false,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    // NAVIGATION
    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    // toggle sidebar
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    // panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    // line
    {
      "before": ["<leader>", "h"],
      "after": ["^"]
    },
    {
      "before": ["<leader>", "l"],
      "after": ["$"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "y"],
      "after": ["\"+y"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-b>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-x>": false,
    "<C-d>": false,
    "<C-p>": false
  },

  // DART REGION
  "dart.devToolsBrowser": "default",
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": false,
  "dart.flutterHotReloadOnSave": "all",

  "workbench.startupEditor": "none",
  "files.exclude": {
    "**/.git": false
  },
  "editor.formatOnPaste": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "cmake.configureOnOpen": false,
  "vsicons.dontShowNewVersionMessage": true,
  "git.openRepositoryInParentFolders": "never",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // CODE RUNNER
  "code-runner.executorMap": {
    // "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt.out && $dir$fileNameWithoutExt.out",
    "javascript": "bun run",
    "csharp": "cd $dir && dotnet run"
  },

  "editor.tabCompletion": "onlySnippets",

  // Power Mode
  "powermode.enabled": true,
  "powermode.combo.location": "off",
  "powermode.shake.enabled": false,
  "powermode.combo.counterSize": 1,
  "powermode.combo.timerEnabled": "show",
  "powermode.shake.intensity": 0,
  "powermode.explosions.duration": 100,
  "powermode.explosions.size": 3,

  // Other
  "gitlens.graph.layout": "editor",
  "gitlens.graph.minimap.enabled": false,
  "markdown-preview-enhanced.previewTheme": "vue.css",
  "editor.mouseWheelZoom": true,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "titlebarLess.showTrafficLights": false,
  "security.workspace.trust.untrustedFiles": "open",
  "livePreview.notifyOnOpenLooseFile": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "liveServer.settings.donotVerifyTags": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "csharp": true
  },
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },
  "cmake.showOptionsMovedNotification": false,
  "terminal.integrated.smoothScrolling": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "dotnetAcquisitionExtension.existingDotnetPath": [
    {
      "extensionId": "ms-dotnettools.csharp",
      "path": "C:\\Program Files\\dotnet\\dotnet.exe"
    }
  ],

